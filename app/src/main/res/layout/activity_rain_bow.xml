<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RainBowActivity"
    android:background="@mipmap/bg">
    <!--设置抽屉控件-->
    <SlidingDrawer

        android:id="@+id/drawer1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:content="@+id/myView"
        android:handle="@id/layout1"
        android:orientation="horizontal">
        <!--设置引导按钮-->
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/myImage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/open" />
        </LinearLayout>
        <!--设置抽屉内容-->
        <ImageView
            android:id="@+id/myView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_bg" />

    </SlidingDrawer>

    <!--显示一级菜单的按钮-->
    <RelativeLayout
        android:id="@+id/level_1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/level1_bg">
        <ImageButton
            android:id="@+id/a_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/a1_icon"/>

    </RelativeLayout>
    <!--显示二级菜单按钮-->
    <RelativeLayout
        android:id="@+id/level_2"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/level2_bg"
        >
        <ImageButton
            android:id="@+id/b_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@mipmap/b1_icon"/>
        <ImageButton
            android:id="@+id/b_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:background="@mipmap/b2_icon"
            />
        <ImageButton
            android:id="@+id/b_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@mipmap/b3_icon"/>

    </RelativeLayout>
    <!--显示三级菜单按钮-->
    <RelativeLayout
        android:id="@+id/level_3"
        android:layout_width="280dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/level3_bg"
        >
        <ImageButton
            android:id="@+id/c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="12dp"
            android:background="@mipmap/c1_icon"
            />
        <ImageButton
            android:id="@+id/c2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/c1"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="28dp"
            android:background="@mipmap/c2_icon"/>
        <ImageButton
            android:id="@+id/c3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/c2"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/c2"
            android:background="@mipmap/c3_icon"/>
        <ImageButton
            android:id="@+id/c4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/c4_icon"
            android:layout_toRightOf="@+id/c3"
            android:layout_marginLeft="30dp"
            />
        <ImageButton
            android:id="@+id/c5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/c5_icon"
            android:layout_toRightOf="@id/c4"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/c4"
            />
        <ImageButton
            android:id="@+id/c6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/c6_icon"
            android:layout_below="@id/c5"
            android:layout_toRightOf="@id/c5"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="12dp"
            />
        <ImageButton
            android:id="@+id/c7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/c7_icon"
            android:layout_below="@id/c6"
            android:layout_toRightOf="@id/c6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-16dp"
            android:onClick="OnExitNumber"
            android:clickable="true"
            android:focusable="true"
            />
    </RelativeLayout>
</RelativeLayout>